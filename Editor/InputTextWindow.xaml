<Window x:Class="Editor.InputTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor"
        mc:Ignorable="d"
        Title="InputTextWindow" 
        Height="115" 
        Width="600" 
        FontSize="14"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBox x:Name="textBox_InputText" Padding="2" Margin="10,10,10,0" VerticalAlignment="Top" GotFocus="TextBox_InputText_GotFocus" LostFocus="TextBox_InputText_LostFocus"/>
        <Button Content="Применить" Margin="0,39,95,0" Width="100" Click="Button_Apply_Click"/>
        <Button Content="Закрыть" Margin="0,39,10,0" Width="80" Click="Button_Close_Click"/>
    </Grid>
</Window>
